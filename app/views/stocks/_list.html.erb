<table class="table table-hover" id="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><%= 'Ticker' %></th>
      <th scope="col"><%= 'Name' %></th>
      <th scope="col"><%= 'Price' %></th>
      <th scope="col"><%= 'Action' %></th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.name %></td>
        <td id="price<%= stock.id %>"><%= stock.price %></td>
        <td><%= link_to 'Update price', update_price_stock_path(ticker: stock.ticker), method: :put, class: "btn-sm btn-success inline-text", remote: true %>
        <%= link_to 'Remove', user_stock_path(stock), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  