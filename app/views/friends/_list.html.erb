<% if @friends %>   
  <h1> Friends list </h1>
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= 'Email' %></th>
        <th scope="col"><%= 'User Name' %></th>
        <th scope="col"><%= 'Action' %></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <th scope="row"><%= friend.email %></th>
          <td><%= friend.full_name %></td>
          <td><%= link_to 'View profile', user_path(friend), class: "btn-sm btn-success" %>
              <%= link_to 'Unfollow', friendship_url(friend), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-warning" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
