<h1>My friends</h1>
<div class="card">
  <div class="search-area mt-4 ml-4">
    <h3>Search users</h3>
    <%= form_tag "search_friend", remote: true, method: :get do %>
      <div class="form-group row mt-2">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :friend, params[:friend], autofocus: true, placeholder: "Enter user full name", class: "form-control form-control-lg" %>
        </div>  
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>  
        </div>
      </div>  
    <% end %>
  </div>
</div>  
<div class="container" id="results">

</div>

<% unless @friends.empty?%>    
  <%= render 'friends/list' %>  
<% end %>
