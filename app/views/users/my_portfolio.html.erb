<h1>My portfolio</h1>
<div class="card">
  <div class="search-area mt-4 ml-4">
    <h3>Search stocks</h3>
    <%= form_tag "search_stock", remote: true, method: :get do %>
      <div class="form-group row mt-2">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :stock, params[:stock], autofocus: true, placeholder: "Enter ticker symbol", class: "form-control form-control-lg" %>
        </div>  
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>  
        </div>
      </div>  
    <% end %>
  </div>
</div>  
<div id="results">

</div>
<% unless @tracked_stocks.empty?%>    
  <%= render 'stocks/list' %>  
<% end %>
  